        </div>

        <!-- Template 3 -->
        <div class="template-card">
            <h3>Creative Template</h3>
            <img src="~/Content/2Creative.png" alt="Creative Template">
            <a href="deneme.html" class="btn">Use This Template</a>
        </div>
    </section>

    <footer>        
        <p>&copy; 2024 YBU CV Maker. All rights reserved.</p>
    </footer>
