    <section class="template-selection">
        <!-- Template 1 -->
        <div class="template-card">
            <h3>Modern Template</h3>
            <img src="~/Content/1Modern.png" alt="Modern Template">
            <a href="@Url.Action("moderntemplate", "Home")" class="btn btn-primary">Use This Template</a>
        </div>

        <!-- Template 2 -->
        <div class="template-card">
            <h3>Classic Template</h3>
            <img src="~/Content/3Classic.png" alt="Classic Template">
